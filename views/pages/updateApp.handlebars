<section>
    <h2>Fill Out Your Application!</h2>
    <h3>All form items must be completed to complete your application</h3>

    <div id="error" hidden>
        <p>Double check for correct input!</p>
    </div>
    <form id="application-form" method="post">
        <label for="firstNameInput" id="first">First Name</label>
        <input id="firstNameInput" type="text" name = "firstNameInput"> <br>

        <label for="lastNameInput" id="last">Last Name</label>
        <input id="lastNameInput" type="text" name = "lastNameInput"> <br>

        <label for="emailInput" id="email">Email</label>
        <input id="emailInput" type="email" name = "emailInput"> <br>

        <label for="ageInput" id="age">Age</label>
        <input id="ageInput" type="number" name = "ageInput"> <br>

        <label for="phoneInput" id="phone">Phone Number</label>
        <input id="phoneInput" type="tel" name = "phoneInput" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"> <br>   

        <label for="livingAccommodationsInput" id="accommodations">What best describes your living situation?</label>
        <select id="livingAccommodationsInput" name="livingAccommodationsInput">
            <option value="home">Home</option>
            <option value="apartment">Apartment</option>
            <option value="townhouse">Townhouse</option>
            <option value="other">Other</option>
        </select> <br>

        <label for="childrenInput" id="children">Do you have any children?</label>
        <select id="childrenInput" name="childrenInput">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select> <br>

        <label for="childrenAgesInput" type="checkbox" id="ages">If so, How old are your children?</label>
        <fieldset id="childrenInput">
            <input id="0" value="0" type="checkbox">
            <label for="0">0</label> <br>
            <input id="1" value ="1" type="checkbox">
            <label for="1">1</label> <br>
