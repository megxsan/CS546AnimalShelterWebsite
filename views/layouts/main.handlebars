<html lang="en">

	<head>
		<meta charset="utf-8" />
		<title>My Site</title>
		<link rel="stylesheet" href="/public/css/main.css" />
	</head>

	<body>
		<nav>
			<ul class="nav">
				<li class="navlist"><a href="/">Main Page</a></li>
				{{#if signedIn}}
					<li class="navlist"><a href="/account/settings">My Account</a></li>
					<li class="navlist"><a href="/logout">Logout</a></li>
				{{else}}
					<li class="navlist"><a href="/login">Login/SignUp</a></li>
				{{/if}}
			</ul>
		</nav>

		<main>
			{{#if error}}
				<p class = 'error'> You must be signed in to like or comment, and you can only like a post once!</p>
			{{/if}}

			{{{body}}}
		</main>
		<script src="../../public/js/form.js"></script>
		<script src="../../public/js/likes.js"></script>

	</body>
</html>